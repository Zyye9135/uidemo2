{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"type": "shell",
			"command": "cmake --build ${workspaceFolder}/build",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"label": "configure",
			"type": "shell",
			"command": "cmake -B ${workspaceFolder}/build -DCMAKE_BUILD_TYPE=Debug",
			"problemMatcher": []
		},
		{
			"label": "clean",
			"type": "shell",
			"command": "cmake --build ${workspaceFolder}/build --target clean",
			"problemMatcher": []
		}
	]
}